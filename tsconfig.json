{
  
  "compilerOptions": {
    "outDir": "lib",
    "target": "es6",
    "module": "ES2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "sourceMap": true,
    "experimentalDecorators":true,
    "strict": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    
  },
  
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.test.ts"
  ]
}